{
  "family": "polyglot-streaming",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::/polyglot-ecs-execution-role",
  "taskRoleArn": "arn:aws:iam::/polyglot-ecs-task-role",
  "containerDefinitions": [{
    "name": "streaming",
    "image": "156456032435.dkr.ecr.us-east-1.amazonaws.com/polyglot-streaming:latest",
    "essential": true,
    "portMappings": [{
      "containerPort": 8080,
      "protocol": "tcp"
    }],
    "environment": [
      {"name": "AWS_REGION", "value": "us-east-1"},
      {"name": "S3_BUCKET", "value": "polyglot-mvp-audio"}
    ],
    "secrets": [{
      "name": "CLAUDE_API_KEY",
      "valueFrom": "arn:aws:secretsmanager:us-east-1:/claude-api-key"
    }],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/polyglot-streaming",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "ecs"
      }
    }
  }]
}
